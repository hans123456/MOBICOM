<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:fab="http://schemas.android.com/apk/res-auto"
	tools:context="com.example.plan8_ui.Events.FriendsFragment"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:isScrollContainer="false" >

    <ListView
		android:id="@+id/friends_fragment_list_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:clipToPadding="false"
		android:divider="@null"
		android:scrollbars="none"/>
	   
	<com.melnykov.fab.FloatingActionButton
		android:id="@+id/friends_fragment_fab"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="end|bottom"
		android:layout_margin="16dp"
		fab:fab_colorNormal="@color/fab_normal"
		fab:fab_colorPressed="@color/fab_pressed"
		fab:fab_colorRipple="@color/fab_ripple"
		fab:fab_shadow="true"
		android:src="@drawable/ic_add_white_24dp" />

</FrameLayout>
	
	