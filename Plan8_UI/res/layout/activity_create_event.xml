<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
   	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
	    android:id="@+id/create_event_activity_activity_toolbar"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:minHeight="?attr/actionBarSize"
	    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    	app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    	android:background="@color/toolbar" />
	
	<fragment
		android:id="@+id/create_event_activity_map_fragment"
		android:layout_width="match_parent"
		android:layout_height="200dp"
		class="com.google.android.gms.maps.SupportMapFragment" />

	<TableRow
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="4dp"
        android:paddingBottom="4dp">
	    
		<com.cengalabs.flatui.views.FlatButton
			android:id="@+id/create_event_activity_invite_button"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_marginLeft="4dp"
			android:layout_marginStart="4dp"
			android:layout_marginRight="2dp"
			android:layout_marginEnd="2dp"
			flatui:fl_textAppearance="fl_none"
			flatui:fl_theme="@array/dark"
			android:text="@string/invite_friends" />

	</TableRow>
	        
    <ScrollView
        android:id="@+id/create_event_activity_scrollview"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbars="none" >
		
		<TableLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:layout_marginEnd="5dp"
		    android:layout_marginStart="5dp"
		    android:scrollbars="none" >
			
		    <TableRow 		        
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="5dp">
			    
			    <EditText
			        android:id="@+id/create_event_activity_title_edit_text"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:maxLength="30"
			        android:hint="Title"
			        android:inputType="text" />
		    
		    </TableRow>
		    
		    <TableRow
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="5dp">
		        
		        <EditText
			        android:id="@+id/create_event_activity_date_start_edit_text"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:focusable="false"
			        android:hint="Start Date" />
		        
		        <EditText
			        android:id="@+id/create_event_activity_time_start_edit_text"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:focusable="false"
			        android:hint="Start Time" />
		        
		    </TableRow>
		    
		    <TableRow
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="5dp">
		        
		        <EditText
			        android:id="@+id/create_event_activity_date_end_edit_text"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:focusable="false"
			        android:hint="End Date" />
		        
		        <EditText
			        android:id="@+id/create_event_activity_time_end_edit_text"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:focusable="false"
			        android:hint="End Time" />
		        
		    </TableRow>
		    
		    <EditText
		        android:id="@+id/create_event_activity_location_edit_text"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="5dp"
		        android:layout_weight="1"
		        android:hint="Location"
		        android:inputType="text" />
		    
		    <EditText
		        android:id="@+id/create_event_activity_description_edit_text"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="5dp"
		        android:layout_weight="1"
		        android:maxLength="300"
		        android:hint="Description"
		        android:inputType="textMultiLine" />
		    
		</TableLayout>
		
	</ScrollView>
	
</LinearLayout>