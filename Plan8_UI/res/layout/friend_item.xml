<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
      xmlns:card_view="http://schemas.android.com/apk/res-auto"
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:orientation="horizontal">
	    
	    <ImageView 
	        android:id="@+id/friend_item_image_view"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginEnd="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/moi_pic_60x60"
	        android:padding="3dp"
	        android:adjustViewBounds="true"
	        android:background="@color/gray"
	        android:contentDescription="@string/dash"/>
		
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_gravity="center_vertical">
	    
		    <TextView
		        android:id="@+id/friend_item_first_name_text_view"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textColor="@android:color/background_dark"
		        android:text="Moira"
		        android:paddingStart="0dp"
		        android:paddingLeft="0dp"
		       	android:paddingEnd="10dp"
		        android:paddingRight="10dp"
	   	        android:textSize="20sp"
		        android:maxLines="1"
		        android:ellipsize="end" />
		    
		    <TextView
		        android:id="@+id/friend_item_last_name_text_view"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textColor="@android:color/background_dark"
		        android:text="Paguiligan"
		        android:paddingStart="0dp"
		        android:paddingLeft="0dp"
		       	android:paddingEnd="10dp"
		        android:paddingRight="10dp"
	   	        android:textSize="20sp"
		        android:maxLines="1"
		        android:ellipsize="end" />
	
	    </LinearLayout>
	    
	</LinearLayout>

</android.support.v7.widget.CardView>